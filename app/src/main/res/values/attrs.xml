<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LiquidPager">
        <attr name="button_drawable" format="reference" />
    </declare-styleable>


    <declare-styleable name="SmoothBottomBar">
        <attr name="menu" format="reference" />
        <attr name="backgroundColor" format="color" />
        <attr name="indicatorColor" format="color" />
        <attr name="indicatorRadius" format="dimension" />
        <attr name="sideMargins" format="dimension" />
        <attr name="itemPadding" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="itemFontFamily" format="reference" />
        <attr name="textSize" format="dimension" />
        <attr name="iconSize" format="dimension" />
        <attr name="iconMargin" format="dimension" />
        <attr name="iconTint" format="color" />
        <attr name="iconTintActive" format="color" />
        <attr name="cornerRadius" format="dimension" />
        <attr name="activeItem" format="integer" />
        <attr name="duration" format="integer" />
        <attr name="corners">
            <flag name="none" value="0" />
            <flag name="top_left" value="1" />
            <flag name="top_right" value="2" />
            <flag name="bottom_right" value="4" />
            <flag name="bottom_left" value="8" />
            <flag name="all" value="15" />
        </attr>
    </declare-styleable>

    <attr name="SmoothBottomBarStyle" format="reference" />

    <declare-styleable name="SNavigationDrawer">
        <attr name="appbarColor" format="color" />
        <attr name="appbarTitleTextColor" format="color" />
        <attr name="appbarTitleTextSize" format="dimension" />
        <attr name="HamMenuIconTintColor" format="color" />
        <attr name="HamMenuIconSize" format="dimension" />
        <attr name="HamMenuItemSemiTransparentColor" format="color" />
        <attr name="navigationDrawerBackgroundColor" format="color" />
        <attr name="primaryMenuItemTextColor" format="color" />
        <attr name="secondaryMenuItemTextColor" format="color" />
        <attr name="primaryMenuItemTextSize" format="dimension" />
        <attr name="secondaryMenuItemTextSize" format="dimension" />
    </declare-styleable>

    <!-- Reference to a style for the menu drawer. -->
    <attr name="elasticDrawerStyle" format="reference" />

    <!-- Styleables used for styling the menu drawer. -->
    <declare-styleable name="ElasticDrawer">

        <!-- Drawable to use for the background of the menu. -->
        <attr name="edMenuBackground" format="color" />

        <!-- The size of the menu. -->
        <attr name="edMenuSize" format="dimension" />

        <!-- The touch bezel size. -->
        <attr name="edTouchBezelSize" format="dimension" />

        <!-- The maximum animation duration -->
        <attr name="edMaxAnimationDuration" format="integer" />

        <!-- The position of the drawer -->
        <attr name="edPosition" format="integer" />
    </declare-styleable>


    <attr name="linkModes">
        <flag name="hashtag" value="1" />
        <flag name="mention" value="2" />
        <flag name="phone" value="4" />
        <flag name="email" value="8" />
        <flag name="url" value="16" />
    </attr>

    <declare-styleable name="SocialTextView">
        <attr name="android:text" />
        <attr name="android:hint" />
        <attr name="underlineEnabled" format="boolean" />
        <attr name="hashtagColor" format="color" />
        <attr name="mentionColor" format="color" />
        <attr name="phoneColor" format="color" />
        <attr name="emailColor" format="color" />
        <attr name="urlColor" format="color" />
        <attr name="selectedColor" format="color" />
        <attr name="linkModes" />
    </declare-styleable>

</resources>